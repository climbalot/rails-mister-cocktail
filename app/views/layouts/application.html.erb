<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="fixed-bg">
      <nav class="navbar navbar-expand-lg navbar-light transparent">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to cocktails_path, { class: "nav-link" } do %>
              <p id="logo">Mr.C</p>
              <span class="sr-only">(current)</span>
            <% end %>
          </li>
        </ul>
        <div class="d-flex">
          <%= form_tag search_path, :method => "get" do %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "form-control" %>
              <div class="input-group-btn">
                <%= submit_tag("Search", class: "btn btn-outline-success my-2 my-sm-0", name: nil) %>
              </div>
            </div>
          <% end %>
          <%= link_to 'Add a Cocktail', new_cocktail_path, class: "btn btn-outline-success my-2 my-sm-0" %>
        </div>
      </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
