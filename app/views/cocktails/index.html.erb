<div class="container">
    <div class="row row-cols-4">
        <% @cocktails.each do |cocktail| %>
            <div class="card col my-4 transparent" style="width: 18rem;">
            <img src="<%= cocktail.image_url %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= cocktail.name %></h5>
                <%= link_to 'Details', cocktail_path(cocktail) %>
            </div>
            </div>
        <% end %>
    </div>
</div>